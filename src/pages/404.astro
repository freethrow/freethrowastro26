---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Staatliches&display=swap"
      rel="stylesheet"
    />
    <title>404 - Page Not Found - FREETHROW</title>
    <ClientRouter />
    <style>
      body {
        background-color: var(--color-background);
      }

      .bauhaus-container {
        position: relative;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
      }

      @keyframes float {
        0%, 100% {
          transform: translateY(0px) rotate(0deg);
        }
        50% {
          transform: translateY(-20px) rotate(5deg);
        }
      }

      .bauhaus-svg {
        animation: float 6s ease-in-out infinite;
      }
    </style>
  </head>
  <body
    class="m-0 p-0 font-['Staatliches',sans-serif] min-h-screen p-8 pt-24"
  >
    <div class="absolute top-8 left-8 z-50 flex gap-4">
      <a
        href="/"
        class="nav-link text-2xl font-black hover:opacity-80 transition-opacity text-black"
      >
        ← HOME
      </a>
    </div>

    <div class="max-w-4xl w-full mx-auto mb-16">
      <h1
        class="text-4xl md:text-8xl font-black tracking-wider mb-8 pt-16 text-black text-center"
      >
        404
      </h1>

      <div class="bauhaus-container mb-12">
        <svg
          class="bauhaus-svg w-full h-auto"
          viewBox="0 0 800 400"
          xmlns="http://www.w3.org/2000/svg"
        >
          <!-- Large circle - Dusty Blue -->
          <circle cx="200" cy="200" r="120" fill="#5A8FA8" opacity="0.9" />

          <!-- Medium circle - Golden Yellow -->
          <circle cx="500" cy="150" r="100" fill="#E8A84A" opacity="0.85" />

          <!-- Small circle - Coral Red -->
          <circle cx="600" cy="280" r="70" fill="#D85D4A" opacity="0.9" />

          <!-- Rectangle - Black -->
          <rect
            x="300"
            y="220"
            width="180"
            height="120"
            fill="#464545"
            opacity="0.8"
            transform="rotate(-15 390 280)"
          />

          <!-- Triangle - Golden Yellow -->
          <path
            d="M 150 80 L 240 80 L 195 160 Z"
            fill="#E8A84A"
            opacity="0.7"
          />

          <!-- Rectangle - Dusty Blue -->
          <rect
            x="550"
            y="80"
            width="160"
            height="70"
            fill="#5A8FA8"
            opacity="0.6"
            transform="rotate(10 630 115)"
          />

          <!-- Half circle - Beige -->
          <path
            d="M 100 350 A 50 50 0 0 1 200 350 Z"
            fill="#E2D5C3"
            stroke="#464545"
            stroke-width="4"
          />

          <!-- Small rectangle - Coral Red -->
          <rect
            x="650"
            y="220"
            width="90"
            height="50"
            fill="#D85D4A"
            opacity="0.75"
          />

          <!-- Thin line element -->
          <line
            x1="100"
            y1="40"
            x2="700"
            y2="65"
            stroke="#464545"
            stroke-width="8"
          />

          <!-- Small circle accent - Black -->
          <circle cx="350" cy="120" r="35" fill="#464545" opacity="0.9" />
        </svg>
      </div>

      <div class="bg-white border-4 border-black p-8 mb-8">
        <blockquote class="text-center">
          <p class="text-2xl md:text-4xl font-black mb-6 leading-tight">
            "Specialists are people who always make the same mistakes"
          </p>
          <footer class="text-xl md:text-2xl font-black opacity-70">
            — Walter Gropius
          </footer>
        </blockquote>
      </div>

      <div class="text-center mb-12">
        <p class="text-2xl md:text-3xl font-black mb-6">
          This one is on me.
        </p>
        <p class="text-xl md:text-2xl font-black mb-8 opacity-70">
          The page you're looking for doesn't exist.
        </p>
        <a
          href="/"
          class="inline-block bg-black text-white border-4 border-black px-8 py-4 text-xl font-black hover:bg-white hover:text-black transition-all"
        >
          RETURN HOME
        </a>
      </div>
    </div>

    <footer
      class="max-w-4xl w-full mx-auto mt-16 mb-8 bg-white border-4 border-black p-8"
    >
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-2xl font-black mb-4">NAVIGATION</h3>
          <nav class="space-y-2">
            <a
              href="/"
              class="block text-lg font-black hover:opacity-70 transition-opacity"
              >HOME</a
            >
            <a
              href="/articles"
              class="block text-lg font-black hover:opacity-70 transition-opacity"
              >ARTICLES</a
            >
            <a
              href="/about"
              class="block text-lg font-black hover:opacity-70 transition-opacity"
              >ABOUT</a
            >
            <a
              href="/books"
              class="block text-lg font-black hover:opacity-70 transition-opacity"
              >BOOKS</a
            >
            <a
              href="/various"
              class="block text-lg font-black hover:opacity-70 transition-opacity"
              >VARIOUS</a
            >
            <a
              href="/contact"
              class="block text-lg font-black hover:opacity-70 transition-opacity"
              >CONTACT</a
            >
          </nav>
        </div>
        <div class="flex flex-col justify-between">
          <div>
            <h3 class="text-xl md:text-2xl font-black mb-4">FREETHROW</h3>
            <p class="text-md md:text-lg mb-2">
              Web Development, AI, data visualization, and other musings.
            </p>
            <p class="text-md md:text-lg mb-2">
              Built with Astro.js + DatoCMS + vibe + manual labour
            </p>
          </div>
          <p class="text-xl md:text-2xl font-black mb-4">© 2026 FREETHROW</p>
        </div>
      </div>
    </footer>
  </body>
</html>
