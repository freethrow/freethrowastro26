---
// Bauhaus-inspired design with Tailwind CSS - Simple Grid
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Staatliches&display=swap"
      rel="stylesheet"
    />
    <title>FREETHROW</title>
    <ClientRouter />
    <style>
      @view-transition {
        navigation: auto;
      }
      ::view-transition-old(articles-box),
      ::view-transition-new(articles-box),
      ::view-transition-old(about-box),
      ::view-transition-new(about-box),
      ::view-transition-old(books-box),
      ::view-transition-new(books-box),
      ::view-transition-old(contact-box),
      ::view-transition-new(contact-box),
      ::view-transition-old(various-box),
      ::view-transition-new(various-box) {
        animation-duration: 0.8s;
        animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
      }

      .freethrow-title {
        view-transition-name: none;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: scale(0.8);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }

      .grid > a {
        animation: fadeIn 0.5s ease-out forwards;
        opacity: 0;
      }

      .grid > a:nth-child(1) {
        animation-delay: 0s;
      }
      .grid > a:nth-child(2) {
        animation-delay: 0.08s;
      }
      .grid > a:nth-child(3) {
        animation-delay: 0.16s;
      }
      .grid > a:nth-child(4) {
        animation-delay: 0.24s;
      }
      .grid > a:nth-child(5) {
        animation-delay: 0.32s;
      }
      .grid > a:nth-child(6) {
        animation-delay: 0.4s;
      }
    </style>
  </head>
  <body
    class="m-0 font-['Staatliches',sans-serif] min-h-screen flex flex-col items-center justify-center p-4 gap-8"
    style="background-color: var(--color-background);"
  >
    <!-- Grid container with 3 columns, 2 rows on desktop / 2 columns, 3 rows on mobile -->
    <div class="w-[80vmin] md:w-[90vmin] max-w-[400px] md:max-w-[600px]">
      <div class="grid grid-cols-2 md:grid-cols-3 gap-3 md:gap-4">
        <!-- Row 1 -->
        <a
          href="/"
          class="aspect-square border-8 border-black flex items-center justify-center hover:opacity-80 transition-opacity"
          style="background-color: var(--color-articles);"
          transition:name="articles-box"
        >
          <span
            class="text-[clamp(1rem,3vw,2rem)] font-black tracking-wider text-center"
            style="color: var(--color-text-inverse);">HOME</span
          >
        </a>

        <a
          href="/about"
          class="aspect-square border-8 border-black rounded-r-full flex items-center justify-center hover:opacity-80 transition-opacity"
          style="background-color: var(--color-about);"
          transition:name="about-box"
        >
          <span
            class="text-[clamp(1rem,3vw,2rem)] font-black tracking-wider text-center"
            style="color: var(--color-text-inverse);">ABOUT</span
          >
        </a>

        <a
          href="/books"
          class="aspect-square border-8 border-black rounded-full flex items-center justify-center hover:opacity-80 transition-opacity"
          style="background-color: var(--color-books);"
          transition:name="books-box"
        >
          <span
            class="text-[clamp(1rem,3vw,2rem)] font-black tracking-wider text-center"
            style="color: var(--color-text-primary);">BOOKS</span
          >
        </a>

        <!-- Row 2 -->
        <a
          href="/contact"
          class="aspect-square border-8 border-black flex items-center justify-center hover:opacity-80 transition-opacity"
          style="background-color: var(--color-contact);"
          transition:name="contact-box"
        >
          <span
            class="text-[clamp(1rem,3vw,2rem)] font-black tracking-wider text-center"
            style="color: var(--color-text-inverse);">CONTACT</span
          >
        </a>

        <a
          href="/various"
          class="aspect-square border-8 border-black rounded-r-full flex items-center justify-center hover:opacity-80 transition-opacity"
          style="background-color: var(--color-various);"
          transition:name="various-box"
        >
          <span
            class="text-[clamp(1rem,3vw,2rem)] font-black tracking-wider text-center"
            style="color: var(--color-text-inverse);">VARIOUS</span
          >
        </a>

        <a
          href="/articles"
          class="aspect-square border-8 border-black rounded-full flex items-center justify-center hover:opacity-80 transition-opacity"
          style="background-color: var(--color-home);"
        >
          <span
            class="text-[clamp(1rem,3vw,2rem)] font-black tracking-wider text-center"
            style="color: var(--color-text-inverse);">ARTICLES</span
          >
        </a>
      </div>

      <h1
        class="freethrow-title text-5xl font-black tracking-wider mt-8 text-gray-700"
      >
        <a href="/">FREETHROW</a>
      </h1>
      <hr class="border-4 border-black w-full mt-2" />
      <p class="text-2xl font-black tracking-wider mt-2">A personal website</p>
    </div>
  </body><script
    data-goatcounter="https://freethrow.goatcounter.com/count"
    async
    src="//gc.zgo.at/count.js"></script>
</html>
